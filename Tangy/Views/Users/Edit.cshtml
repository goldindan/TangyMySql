@model Tangy.Models.UserViewModel.UserViewModel
@{
    ViewData["Title"] = "עדכון";
}

<br />
<h2>עדכון משתמש</h2>
<br />

<form asp-action="Edit">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" disabled class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LockoutEnd" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LockoutEnd" type="text" id="datepicker" class="form-control">
            </div>
            <span asp-validation-for="LockoutEnd" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LockoutReason" class="control-label"></label>
            </div>
            <div class="col-4">
                <textarea asp-for="LockoutReason" rows="5" class="form-control" ></textarea>
            </div>
            <span asp-validation-for="LockoutReason" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AccessFailedCount" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="AccessFailedCount" class="form-control" />
            </div>
            <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="שמירה" class="btn btn-primary" /> &nbsp;
            <a asp-action="Index" class="btn btn-success">חזרה לרשימה</a>
        </div>
    </div>
</form>

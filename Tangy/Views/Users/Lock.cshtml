@model Tangy.Models.UserViewModel.UserViewModel
@{
    ViewData["Title"] = "נעילה";
}

<br />
<h2>נעילת משתמש</h2>
<br />

<form asp-action="Lock">
    <div class="form-border">
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="FirstName" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LastName" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="PhoneNumber" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LockoutEnd" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LockoutEnd" type="text" disabled id="datepicker" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LockoutReason" class="control-label"></label>
            </div>
            <div class="col-4">
                <textarea asp-for="LockoutReason" rows="5" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AccessFailedCount" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="AccessFailedCount" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="נעילה" class="btn btn-danger" /> &nbsp;
            <a asp-action="Index" class="btn btn-success">חזרה לרשימה</a>
        </div>
    </div>
</form>

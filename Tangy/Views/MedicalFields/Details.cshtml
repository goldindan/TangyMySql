@model Tangy.Models.MedicalField

@{
    ViewData["Title"] = "פרטים";
}

<br />
<h2>פרטימ מחלקה רפואית</h2>
<br />

<div class="form-border">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DisplayOrder" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="DisplayOrder" class="form-control" />
            </div>
        </div>
    </fieldset>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">עדכון</a>
        <a asp-action="Index" class="btn btn-success">חזרה לרשימה</a>
    </div>
</div>

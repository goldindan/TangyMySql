@model Tangy.Models.TherapyType

@{
    ViewData["Title"] = "פרטים";
}

<br />
<h2>מחיקת טיפול</h2>
<br />

<form asp-action="Delete">
    <input asp-for="Id" type="hidden" />
    <div class="form-border">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DisplayOrder" class="custom-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="DisplayOrder" class="form-control" />
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="מחיקה">&nbsp;
            <a asp-action="Index" class="btn btn-success">חזרה לרשימה</a>
        </div>
    </div>
</form>

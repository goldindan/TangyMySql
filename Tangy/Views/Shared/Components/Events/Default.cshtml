@model IEnumerable<Tangy.Models.Event>
@{
    ViewData["Title"] = "Default";
}


<div id="demo" class="carousel slide w-100 text-center border" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
           <li data-target="#demo" data-slide-to="@i" class="@((i == 0)? "active":"")"></li>
        }
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner" style="background-color:black">
        @for (int i = 0; i < Model.Count(); i++)
        {
        <div class="carousel-item @((i == 0)? "active":"")">
            <div class="row m-0" style="color:white; ">
                <div class="col-4" style="border-left: 4px solid #17a2b8">
                    <img src="@Model.ElementAt(i).Image" style="height:200px; width:250px">
                </div>
                <div class="col-8 p-2" >
                    <div style="margin-right:-15px; margin-left:-15px; text-align: center;vertical-align: middle;">
                        <h4>@Model.ElementAt(i).Name</h4>
                    </div>
                    <div class="row" >
                        <div class="col-4 ">
                            @Model.ElementAt(i).StartDate
                            <br />
                            @Model.ElementAt(i).EndDate
                        </div>
                        <div class="col-8 font-italic align-middle">
                            @if (Model.ElementAt(i).Description.Length > 200)
                            {
                                @Model.ElementAt(i).Description.Substring(0, 200);
                            }
                            else
                            {
                                @Model.ElementAt(i).Description;
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

@model Tangy.Models.RightsPannelViewModel.RightsPannelViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="col p-2">
    <div class="row p-0 m-0" style="height:24px;">
        <div class="pl-2" id="icon"><i class="fas fa-list-ul" style="color:#abb96c"></i></div>
        <div class="align-text-bottom" id="title" style="color:#abb96c"><h5>@Model.Title</h5></div>
    </div>
    <div class="p-1 pt-3" style="background-color:beige; border-top:3px solid #abb96c;color:#abb96c;">
        <ul>
            @foreach (var item in Model.Rights)
            {
                <li>
                    <a asp-controller="Rights" asp-action="Show" asp-route-rightId="@item" style="color:black">@item</a>
                </li>
            }
        </ul>
    </div>
</div>

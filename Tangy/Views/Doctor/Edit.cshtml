@model Tangy.Models.Doctor
@{
    ViewData["Title"] = "עדכון";
}

<h2>עדכון מטפל</h2>

<hr />
<form asp-action="Edit">
    <input hidden asp-for="Id" />
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" readonly class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PlaceName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="PlaceName" readonly class="form-control" />
            </div>
            <span asp-validation-for="PlaceName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Address" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="City" class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Phone" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-4">
                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="שמירה" class="btn btn-primary" /> &nbsp;
            <a asp-action="Index" asp-route-medicalFieldId="@Model.MedicalFieldId" class="btn btn-success">חזרה לרשימה</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


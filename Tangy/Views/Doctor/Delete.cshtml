@model Tangy.Models.Doctor
@{
    ViewData["Title"] = "מחיקה";
}

<h2>מחיקת רופא</h2>

<hr />
<form asp-action="Delete">
    <input hidden asp-for="Id" />
    <div class="form-border">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="PlaceName" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="PlaceName" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Address" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Address" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="City" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="City" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Phone" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Phone" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-4">
                    <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                </div>
            </div>
        </fieldset>

        <br />
        <div class="form-group">
            <input type="submit" value="מחיקה" class="btn btn-danger" /> &nbsp;
            <a asp-action="Index" asp-route-medicalFieldId="@Model.MedicalFieldId" class="btn btn-success">חזרה לרשימה</a>
        </div>
    </div>
</form>
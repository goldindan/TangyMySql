@model Tangy.Models.Therapist
@{
    ViewData["Title"] = "פרטים";
}

<h2>פרטי טיפול</h2>

<hr />
<fieldset disabled>
    <div class="form-border">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PlaceName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="PlaceName" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="City" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Phone" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Phone" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-4">
                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
            </div>
        </div>
    </div>
</fieldset>
<br />
<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">עדכון</a>
    <a asp-action="Index" asp-route-therapyTypeId="@Model.TherapyTypeId" class="btn btn-success">חזרה לרשימה</a>
</div>

@model  IEnumerable<Tangy.Models.ExternalDataViewModels.PrescriptionDrugsPriceListData>
@{
    ViewData["Title"] = "מחירון לתרופות במרשם";
}

<h2>מחירון לתרופות במרשם</h2>

<div class="form-border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DrugName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PackageSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumRetailprice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumRetailMargin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumConsumerPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumConsumerPriceIncludingVAT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodeWillHeal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CodePharmaSoft)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(model => item.DrugName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.PackageSize)
                </td>
                <td>
                    @Html.DisplayFor(model => item.MaximumRetailprice)
                </td>
                <td>
                    @Html.DisplayFor(model => item.MaximumRetailMargin)
                </td>
                <td>
                    @Html.DisplayFor(model => item.MaximumConsumerPrice)
                </td>
                <td>
                    @Html.DisplayFor(model => item.MaximumConsumerPriceIncludingVAT)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CodeWillHeal)
                </td>
                <td>
                    @Html.DisplayFor(model => item.CodePharmaSoft)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
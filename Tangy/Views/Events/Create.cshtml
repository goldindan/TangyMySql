@model Tangy.Models.Event
@using Tangy.Extensions
@{
    ViewData["Title"] = "יצירת אירוע";
}

<h2>יצירת אירוע חדש</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="StartDate" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="StartDate" class="form-control" />
            </div>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="EndDate" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="EndDate" class="form-control" />
            </div>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image" class="custom-label"></label>
            </div>
            <div class="col-5 btn-group">
                <label class="btn btn-primary btn-file col-4 ml-2 mb-0" style="border-radius:0.25rem">
                    בחירת תמונה... <input type="file" name="files" multiple style="display: none;">
                </label>
                <input type="text" id="filename" class="form-control" readonly />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OrderId" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="OrderId" class="form-control" />
            </div>
            <span asp-validation-for="OrderId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsActive" class="form-check-input" />
            </div>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="שמירה" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">חזרה לרשימה</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).on('change', ':file', function () {
            var input = $(this),
                numFiles = input.get(0).files ? input.get(0).files.length : 1,
                label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
            input.trigger('fileselect', [numFiles, label]);

            $('#filename').val(label);
        });
    </script>
}
